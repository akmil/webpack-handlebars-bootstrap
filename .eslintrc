{
    "env": {
        "browser": true,
        "amd": true,
        "es6": true,
        "jest": true,
        "jquery": true
    },
    "extends": "airbnb-base",
    "globals": {
        "YT": "writable"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "off",
        "no-console": "off",
        "no-inner-declarations": "off",
        "no-extra-semi": "off",
        "padded-blocks": 0,
        "comma-dangle": "off",
        "linebreak-style": "off",
        "arrow-body-style": 0,
        "quote-props": [
            "error",
            "consistent-as-needed"
        ],
		"camelcase": [ "error", { "properties": "always" }],
        "max-len": 0,
        "indent": [
            "error",
            4
        ],
        "no-new": 0,
//        "quotes": [
//            "error",
//            "double"
//        ],
        "linebreaks": 0,
        "no-param-reassign": [
            0,
            {
                "props": true
            }
        ],
        "func-names": 0,
        "global-require": 0,
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ],
        "new-cap": "off",
        "array-callback-return": "off",
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "no-unused-expressions": [
            2,
            { "allowTernary": true }
        ]
    }
}
